for r in [0.6, 0.8, 1.0, 1.2, 1.4, 1.6, 1.8, 2.0]:
    xyz = '''H 0.0 0.0 0.0; H 0.0 0.0 %f'''%r
    mf = util.guess_from_fchk(xyz, bas, fch)
    
    mf2 = util.SUHF(mf)
    mf2.cut_no = False
    mf2.debug = False
    mf2.max_cycle = 50
    mf2.output = 'sudft_%.1f.out'%r
    #mf2.kernel()
    
    mf3 = sudft.SUDFT(mf2)
    mf3.kernel()
